{
	"$schema": "checklist-config-schema.json",
	"items": [
		{
			"name": "excerpt_at_least_120_characters",
			"type": "non_blocking",
			"check": {
				"type": "min",
				"min": 120,
				"sourceKey": "excerpt"
			},
			"messages": {
				"pass": "Excerpt is at least 120 characters",
				"fail": "Excerpt is too short! It must be at least 120 characters"
			},
			"postTypes": [ "post" ]
		},
		{
			"name": "excerpt_at_most_160_characters",
			"type": "blocking",
			"check": {
				"type": "max",
				"max": 160,
				"sourceKey": "excerpt"
			},
			"messages": {
				"pass": "Excerpt is at most 160 characters",
				"fail": "Excerpt is too long! It must be no more than 160 characters"
			},
			"postTypes": [ "post" ]
		},
		{
			"name": "category_selected",
			"type": "blocking",
			"check": {
				"type": "exists",
				"sourceKey": "categories"
			},
			"messages": {
				"pass": "A category is selected",
				"fail": "Must select a category"
			},
			"postTypes": [ "post" ]
		},
		{
			"name": "one_category_selected",
			"type": "blocking",
			"check": {
				"type": "max",
				"sourceKey": "categories",
				"max": 1
			},
			"messages": {
				"pass": "A single category is selected",
				"fail": "Must assign only one category!"
			},
			"postTypes": [ "post" ]
		},
		{
			"name": "featured_image_exists",
			"type": "blocking",
			"check": {
				"type": "exists",
				"sourceKey": "featured_media"
			},
			"messages": {
				"pass": "Featured image is set",
				"fail": "Featured image is required"
			},
			"postTypes": [ "post" ]
		},
		{
			"name": "homepage_current_feature",
			"type": "non_blocking",
			"check": {
				"type": "exists",
				"sourceKey": "meta.homepage_current_feature_image"
			},
			"messages": {
				"pass": "Homepage current feature image is set",
				"fail": "Homepage current feature image not set! Will use featured image instead."
			},
			"postTypes": [ "post" ]
		},
		{
			"name": "homepage_alternate_description",
			"type": "non_blocking",
			"check": {
				"type": "exists",
				"sourceKey": "meta.homepage_alternate_description"
			},
			"messages": {
				"pass": "Homepage alternate description is set",
				"fail": " Homepage alternate description not set! Will use excerpt instead."
			},
			"postTypes": [ "post" ]
		},
		{
			"name": "meta_profile_title",
			"type": "blocking",
			"check": {
				"type": "exists",
				"sourceKey": "meta.meta_profile_title"
			},
			"messages": {
				"pass": "Profile title is set",
				"fail": "Profile title is required"
			},
			"postTypes": [ "post" ]
		},
		{
			"name": "meta_bitly",
			"type": "blocking",
			"check": {
				"type": "exists",
				"sourceKey": "meta.meta_bitly"
			},
			"messages": {
				"pass": "Bitly link is set",
				"fail": "Bitly link is required"
			},
			"postTypes": [ "post" ]
		},
		{
			"name": "meta_vimeo_url",
			"type": "blocking",
			"check": {
				"type": "exists",
				"sourceKey": "meta.meta_vimeo_url"
			},
			"messages": {
				"pass": "Vimeo URL is set",
				"fail": "Vimeo URL is required"
			},
			"postTypes": [ "post" ]
		},
		{
			"name": "meta_vimeo_custom_thumbnail",
			"type": "non_blocking",
			"check": {
				"type": "exists",
				"sourceKey": "meta.meta_vimeo_custom_thumbnail"
			},
			"messages": {
				"pass": "Vimeo custom thumbnail is set",
				"fail": "Vimeo custom thumbnail is not set."
			},
			"postTypes": [ "post" ]
		}
	]
}
